{
    "name": "song-nexus",
    "version": "1.0.0",
    "description": "Full-stack music streaming platform with PayPal integration and HTTPS support",
    "scripts": {
        "start": "concurrently \"npm run server\" \"npm run client\" --names \"BACKEND\" \"FRONTEND\" --prefix \"[{time}]\" --kill-others-on-exit",
        "start:local": "concurrently \"npm run server:local\" \"npm run client:https\" --names \"BACKEND\" \"FRONTEND\" --prefix \"[{time}]\" --kill-others-on-exit",
        "start:prod": "concurrently \"npm run server:prod\" \"npm run client\" --names \"BACKEND\" \"FRONTEND\" --prefix \"[{time}]\" --kill-others-on-exit",
        "server": "cd backend && npm start",
        "server:local": "cd backend && npm run start:local",
        "server:prod": "cd backend && npm run start:prod",
        "client": "cd frontend && npm start",
        "client:https": "cd frontend && npm run start:https",
        "client:http": "cd frontend && npm run start:http",
        "dev": "concurrently \"npm run server:dev\" \"npm run client:https\" --names \"BACKEND\" \"FRONTEND\" --prefix \"[{time}]\" --kill-others-on-exit",
        "server:dev": "cd backend && npm run dev:local",
        "stop": "taskkill /IM node.exe /F",
        "build": "webpack --mode production",
        "build:dev": "webpack --mode development",
        "build:watch": "webpack --mode development --watch"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "babel-loader": "^10.0.0",
        "concurrently": "^8.2.2",
        "dotenv": "^17.2.3",
        "node-forge": "^1.3.3",
        "terser-webpack-plugin": "^5.3.16",
        "uglify-js": "^3.19.3",
        "webpack": "^5.104.0",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "@simplewebauthn/server": "^13.2.2",
        "base64url": "^3.0.1",
        "bcryptjs": "^3.0.3",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csrf-csrf": "^4.0.3",
        "express-rate-limit": "^8.2.1",
        "express-session": "^1.18.2",
        "helmet": "^8.1.0",
        "mongo-sanitize": "^1.1.0",
        "xss-clean": "^0.1.4"
    }
}
