{
    "name": "song-nexus-frontend",
    "version": "1.0.0",
    "description": "Frontend for SONG-NEXUS - Music streaming platform with HTTPS support",
    "scripts": {
        "start": "http-server -p 5500 -S -C certs/localhost.pem -K certs/localhost-key.pem --cors",
        "start:https": "http-server -p 5500 -S -C certs/localhost.pem -K certs/localhost-key.pem --cors",
        "start:http": "http-server -p 5500 --cors",
        "start:no-cors": "http-server -p 5500",
        "build": "echo 'Static files ready for deployment'",
        "preview": "http-server -p 8080"
    },
    "dependencies": {
        "http-server": "^14.1.1"
    }
}