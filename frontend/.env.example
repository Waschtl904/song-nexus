# ============================================================================
# üéµ SONG-NEXUS FRONTEND ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in with your actual values
# This is the SOURCE OF TRUTH for all frontend environment variables

# ============================================================================
# üîó API & BACKEND CONFIGURATION
# ============================================================================
# Backend API Base URL
VITE_API_URL=https://localhost:3000
VITE_API_TIMEOUT=10000

# Backend Origin (for CORS, WebAuthn)
VITE_API_ORIGIN=https://localhost:3000

# ============================================================================
# üîê AUTHENTICATION CONFIGURATION
# ============================================================================
# JWT Token Storage
VITE_JWT_STORAGE_KEY=song_nexus_token
VITE_JWT_REFRESH_KEY=song_nexus_refresh_token

# Session Configuration
VITE_SESSION_TIMEOUT=604800000
VITE_SESSION_STORAGE_KEY=song_nexus_session

# Authentication Type Settings
VITE_AUTH_METHODS_ENABLED=webauthn,email,magic-link
VITE_WEBAUTHN_ENABLED=true
VITE_EMAIL_AUTH_ENABLED=true
VITE_MAGIC_LINK_ENABLED=true

# ============================================================================
# üîê WEBAUTHN BIOMETRIC CONFIGURATION
# ============================================================================
# These values must match backend WEBAUTHN_* settings exactly!
VITE_WEBAUTHN_RP_ID=localhost
VITE_WEBAUTHN_RP_NAME=SONG-NEXUS
VITE_WEBAUTHN_ORIGIN=https://localhost:5500
VITE_WEBAUTHN_TIMEOUT=60000

# WebAuthn Features
VITE_WEBAUTHN_RESIDENT_KEY=preferred
VITE_WEBAUTHN_USER_VERIFICATION=preferred

# ============================================================================
# üí≥ PAYPAL INTEGRATION
# ============================================================================
VITE_PAYPAL_MODE=sandbox
VITE_PAYPAL_CLIENT_ID=your-paypal-sandbox-client-id
VITE_PAYPAL_CURRENCY=EUR
VITE_PAYPAL_INTENT=CAPTURE

# Production Mode (when ready)
# VITE_PAYPAL_MODE=live
# VITE_PAYPAL_CLIENT_ID=your-paypal-live-client-id

# ============================================================================
# üé® THEME & DESIGN SYSTEM
# ============================================================================
# Default Theme on First Load
VITE_DEFAULT_THEME=light
VITE_THEME_STORAGE_KEY=song_nexus_theme
VITE_THEME_AUTO_DETECT=true

# Design System API
VITE_DESIGN_SYSTEM_URL=https://localhost:3000/api/design-system
VITE_DESIGN_SYSTEM_CACHE=300000

# CSS Design Tokens File
VITE_DESIGN_TOKENS_PATH=/dist/_design-tokens.css

# ============================================================================
# üéµ AUDIO PLAYER CONFIGURATION
# ============================================================================
VITE_AUDIO_BUFFER_SIZE=4096
VITE_AUDIO_SAMPLE_RATE=44100
VITE_AUDIO_CHANNELS=2
VITE_AUDIO_BIT_DEPTH=16

# Preview Settings
VITE_PREVIEW_DURATION=40
VITE_PREVIEW_START=0

# Playback Settings
VITE_DEFAULT_VOLUME=0.7
VITE_ENABLE_VOLUME_NORMALIZATION=false
VITE_ENABLE_AUDIO_VISUALIZER=true
VITE_ENABLE_WAVEFORM_DISPLAY=true

# ============================================================================
# üì± APP CONFIGURATION
# ============================================================================
VITE_APP_NAME=Song-Nexus
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern music streaming platform with biometric authentication
VITE_APP_AUTHOR=Sebastian
VITE_APP_LICENSE=MIT

# ============================================================================
# üåç DEPLOYMENT ENVIRONMENT
# ============================================================================
VITE_ENVIRONMENT=development
VITE_ENV=development
VITE_MODE=development

# Webpack Configuration
VITE_SOURCE_MAP=true
VITE_MINIFY=false

# ============================================================================
# üìä ANALYTICS & TRACKING
# ============================================================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_TRACKING=true

# Google Analytics / Mixpanel / etc.
VITE_ANALYTICS_ID=
VITE_ANALYTICS_DOMAIN=

# Error Tracking (Sentry, LogRocket, etc.)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACE_SAMPLE_RATE=1.0

# ============================================================================
# üîç DEBUG & DEVELOPMENT
# ============================================================================
VITE_DEBUG_MODE=false
VITE_VERBOSE_LOGGING=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true
VITE_SHOW_PERFORMANCE_METRICS=true

# ============================================================================
# üíæ CACHING & STORAGE
# ============================================================================
# Local Storage Settings
VITE_STORAGE_PREFIX=songnexus_
VITE_STORAGE_VERSION=1
VITE_CACHE_MAX_AGE=604800000

# IndexedDB Settings (if using)
VITE_INDEXEDDB_NAME=song_nexus_db
VITE_INDEXEDDB_VERSION=1
VITE_INDEXEDDB_STORES=users,tracks,purchases,playlists

# ============================================================================
# üîß FEATURE FLAGS
# ============================================================================
VITE_ENABLE_PLAYLISTS=false
VITE_ENABLE_SOCIAL_FEATURES=false
VITE_ENABLE_RECOMMENDATIONS=false
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ACCESSIBILITY_FEATURES=true

# ============================================================================
# üåê EXTERNAL SERVICES
# ============================================================================
# CDN for static assets
VITE_CDN_URL=
VITE_CDN_BUCKET=

# Image Optimization Service
VITE_IMAGE_OPTIMIZATION_URL=

# ============================================================================
# üìù LOGGING & DEBUG
# ============================================================================
VITE_LOG_LEVEL=info
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_FILE=false
VITE_LOG_FILE_PATH=/logs

# ============================================================================
# üì± RESPONSIVE DESIGN
# ============================================================================
VITE_BREAKPOINT_MOBILE=480px
VITE_BREAKPOINT_TABLET=768px
VITE_BREAKPOINT_DESKTOP=1024px
VITE_BREAKPOINT_WIDE=1280px

# ============================================================================
# üìù NOTES FOR PRODUCTION DEPLOYMENT
# ============================================================================
# 1. Update VITE_API_URL to your production backend domain
# 2. Change VITE_ENVIRONMENT=production
# 3. Update VITE_WEBAUTHN_* to match production domain
# 4. Update VITE_PAYPAL_CLIENT_ID to production ID
# 5. Change VITE_PAYPAL_MODE=live
# 6. Disable debug flags:
#    - VITE_DEBUG_MODE=false
#    - VITE_VERBOSE_LOGGING=false
#    - VITE_SHOW_PERFORMANCE_METRICS=false
# 7. Enable minification: VITE_MINIFY=true
# 8. Disable source maps: VITE_SOURCE_MAP=false
# 9. Setup error tracking (Sentry, LogRocket)
# 10. Configure analytics (Google Analytics, Mixpanel)
