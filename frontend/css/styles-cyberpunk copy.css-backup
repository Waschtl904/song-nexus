@import '../styles/_design-tokens.css';

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-family: 'JetBrains Mono', ui-monospace, 'Courier New', monospace;
    background: var(--color-background);
    color: var(--color-text_primary);
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
}

body {
    background: linear-gradient(135deg, var(--color-background) 0%, var(--color-charcoal-700) 100%);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    margin: 0;
    position: relative;
    overflow-x: hidden;
}

@keyframes scanlines {
    0% {
        transform: translateY(0);
    }

    100% {
        transform: translateY(10px);
    }
}

body::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(0deg, rgba(0, 204, 119, 0.008), rgba(0, 204, 119, 0.008) 1px, transparent 1px, transparent 2px);
    pointer-events: none;
    z-index: 999;
    animation: scanlines 8s linear infinite;
    opacity: 0.5;
}

body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('https://user-gen-media-assets.s3.amazonaws.com/seedream_images/313c36a1-b49c-4bb7-b002-11c11ca08f38.png');
    background-size: cover;
    background-attachment: fixed;
    opacity: 0.75;
    z-index: 0;
    filter: contrast(1.3) saturate(1.25) brightness(0.88);
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    position: relative;
    z-index: 1;
}

.theme-toggle {
    position: fixed;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent_orange));
    border: none;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    cursor: pointer;
    z-index: 500;
    font-size: 1.5rem;
    transition: var(--transition);
    box-shadow: 0 0 15px rgba(0, 204, 119, 0.3);
}

.theme-toggle:hover {
    transform: scale(1.1);
    box-shadow: 0 0 25px rgba(0, 204, 119, 0.5);
}

header {
    text-align: center;
    margin-bottom: 30px;
    border: 1.5px solid var(--color-primary);
    padding: 25px;
    border-radius: 6px;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(4px);
    box-shadow: 0 0 20px rgba(0, 204, 119, 0.15), inset 0 0 15px rgba(0, 204, 119, 0.05);
}

h1 {
    font-size: 2.2rem;
    font-weight: 900;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 8px;
    color: var(--color-primary);
    text-shadow: 0 0 15px var(--color-primary), 0 0 30px rgba(0, 204, 119, 0.3);
    filter: brightness(1.2) contrast(1.3);
}

h2 {
    color: var(--color-primary);
    text-transform: uppercase;
    margin-bottom: 16px;
    font-weight: 700;
    letter-spacing: 1px;
    text-shadow: 0 0 10px rgba(0, 204, 119, 0.2);
}

.subtitle {
    color: var(--color-text_secondary);
    font-size: 0.8rem;
    letter-spacing: 1px;
}

.auth-section,
.user-section,
.card,
.blog-section {
    background: rgba(10, 14, 26, 0.35);
    backdrop-filter: blur(12px);
    border: 1.5px solid rgba(0, 204, 119, 0.4);
    border-radius: 6px;
    padding: 24px;
    margin-bottom: 30px;
    box-shadow: 0 0 20px rgba(0, 204, 119, 0.12), inset 0 0 20px rgba(0, 204, 119, 0.04);
    transition: var(--transition);
    position: relative;
}

.auth-section {
    display: none;
}

.auth-section.active {
    display: block;
    border-color: var(--color-primary);
    box-shadow: 0 0 25px rgba(0, 204, 119, 0.2), inset 0 0 20px rgba(0, 204, 119, 0.08);
}

.user-section {
    display: none;
}

.user-section.active {
    display: block;
    border-color: var(--color-primary);
    box-shadow: 0 0 25px rgba(0, 204, 119, 0.2), inset 0 0 20px rgba(0, 204, 119, 0.08);
}

.card:hover,
.blog-section:hover {
    border-color: var(--color-primary);
    box-shadow: 0 0 30px rgba(0, 204, 119, 0.2), inset 0 0 25px rgba(0, 204, 119, 0.08);
    background: rgba(10, 14, 26, 0.5);
}

.form-group {
    margin-bottom: 16px;
    position: relative;
    z-index: 2;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    color: var(--color-text_secondary);
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.5px;
}

.form-group input,
.form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid rgba(0, 204, 119, 0.3);
    background: rgba(0, 0, 0, 0.4);
    color: var(--color-text_primary);
    border-radius: 4px;
    font-family: inherit;
    font-size: 0.9rem;
    transition: var(--transition);
}

.form-group input::placeholder,
.form-control::placeholder {
    color: rgba(0, 204, 119, 0.4);
}

.form-group input:focus,
.form-control:focus {
    outline: none;
    border-color: var(--color-primary);
    background: rgba(0, 0, 0, 0.5);
    box-shadow: 0 0 12px rgba(0, 204, 119, 0.25), inset 0 0 8px rgba(0, 204, 119, 0.08);
}

.button {
    padding: 12px 24px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent_orange));
    color: #000;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 700;
    text-transform: uppercase;
    transition: var(--transition);
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    box-shadow: 0 0 15px rgba(0, 204, 119, 0.2);
    position: relative;
    z-index: 2;
}

.button:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 0 25px rgba(0, 204, 119, 0.4);
}

.button:active:not(:disabled) {
    transform: translateY(0);
}

.button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.button-secondary {
    background: transparent;
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    margin-top: 8px;
    box-shadow: 0 0 10px rgba(0, 204, 119, 0.1);
}

.button-secondary:hover:not(:disabled) {
    background: rgba(0, 204, 119, 0.15);
    box-shadow: 0 0 20px rgba(0, 204, 119, 0.2);
}

.button-sm {
    margin-top: 18px;
    margin-bottom: -5px;
    padding: 8px 16px;
    font-size: 0.8rem;
}

.user-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 16px;
    margin-bottom: 20px;
    position: relative;
    z-index: 2;
}

.user-card {
    background: rgba(0, 204, 119, 0.06);
    border: 1px solid rgba(0, 204, 119, 0.2);
    padding: 16px;
    border-radius: 4px;
    transition: var(--transition);
}

.user-card:hover {
    background: rgba(0, 204, 119, 0.1);
    border-color: rgba(0, 204, 119, 0.4);
    box-shadow: 0 0 12px rgba(0, 204, 119, 0.12);
}

.user-card-label {
    font-size: 0.75rem;
    color: var(--color-text_secondary);
    text-transform: uppercase;
    margin-bottom: 8px;
    letter-spacing: 0.5px;
    font-weight: 600;
}

.user-card-value {
    font-size: 1.4rem;
    font-weight: 900;
    color: var(--color-primary);
    text-shadow: 0 0 12px rgba(0, 204, 119, 0.3);
    filter: brightness(1.15) contrast(1.2);
}

.track-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 16px;
    margin-top: 20px;
    margin-bottom: 20px;
    min-height: 400px;
    max-height: 600px;
    overflow-y: auto;
    padding: 10px;
    position: relative;
    z-index: 2;
}

.track-grid::-webkit-scrollbar {
    width: 8px;
}

.track-grid::-webkit-scrollbar-track {
    background: rgba(0, 204, 119, 0.05);
    border-radius: 4px;
}

.track-grid::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent_orange));
    border-radius: 4px;
    box-shadow: 0 0 10px rgba(0, 204, 119, 0.3);
}

.track-card {
    background: rgba(10, 14, 26, 0.4);
    backdrop-filter: blur(5px);
    border: 1.5px solid rgba(0, 204, 119, 0.35);
    border-radius: 6px;
    padding: 16px;
    max-height: 190px;
    cursor: pointer;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(0, 204, 119, 0.1), inset 0 0 15px rgba(0, 204, 119, 0.04);
}

.track-card:hover {
    border-color: var(--color-primary);
    background: rgba(10, 14, 26, 0.6);
    backdrop-filter: blur(0px);
    box-shadow: 0 0 30px rgba(0, 204, 119, 0.25), inset 0 0 20px rgba(0, 204, 119, 0.08);
    transform: translateY(-1px);
}

.track-title {
    color: var(--color-primary);
    font-weight: 700;
    margin-bottom: 8px;
    font-size: 0.95rem;
    letter-spacing: 0.5px;
    text-shadow: 0 0 10px rgba(0, 204, 119, 0.15);
}

.track-artist {
    color: var(--color-text_secondary);
    font-size: 0.8rem;
    margin-bottom: 8px;
}

.track-meta {
    color: var(--color-text_secondary);
    font-size: 0.8rem;
    margin-bottom: 12px;
    display: flex;
    gap: 12px;
}

.track-price {
    font-weight: 700;
    margin-top: 8px;
    font-size: 1rem;
    color: var(--color-primary);
    text-shadow: 0 0 10px rgba(0, 204, 119, 0.2);
}

.track-badge {
    display: inline-block;
    background: rgba(0, 204, 119, 0.15);
    color: var(--color-primary);
    padding: 4px 8px;
    border-radius: 3px;
    font-size: 0.7rem;
    margin-top: 8px;
    border: 1px solid rgba(0, 204, 119, 0.2);
    text-transform: uppercase;
    letter-spacing: 0.3px;
    font-weight: 600;
}

.track-badge.purchased {
    background: rgba(183, 65, 14, 0.15);
    color: #e09040;
    border: 1px solid rgba(183, 65, 14, 0.3);
}

/* ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê
   STICKY PLAYER
   ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê */

.sticky-player {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 350px;
    max-width: 90vw;
    background: rgba(10, 14, 26, 0.4);
    border: 1.5px solid rgba(0, 204, 119, 0.35);
    border-radius: 6px;
    box-shadow: 0 0 20px rgba(0, 204, 119, 0.1), inset 0 0 15px rgba(0, 204, 119, 0.04);
    backdrop-filter: blur(12px);
    z-index: 400;
    transition: var(--transition);
}

.sticky-player.minimized .player-content {
    display: none;
}

.player-header {
    background: rgba(0, 204, 119, 0.08);
    border-bottom: 1px solid rgba(0, 204, 119, 0.15);
    padding: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    cursor: pointer;
    transition: background var(--transition);
}

.player-header:hover {
    background: rgba(0, 204, 119, 0.12);
}

.now-playing {
    flex: 1;
    min-width: 0;
}

.track-name {
    color: var(--color-primary);
    font-weight: 700;
    font-size: 0.9rem;
    text-transform: uppercase;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    letter-spacing: 0.5px;
    text-shadow: 0 0 8px rgba(0, 204, 119, 0.15);
}

.track-artist {
    color: var(--color-text_secondary);
    font-size: 0.75rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 2px;
}

.player-btn {
    background: transparent;
    border: none;
    color: var(--color-primary);
    cursor: pointer;
    font-size: 1.2rem;
    transition: var(--transition);
    padding: 4px 8px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.player-btn:hover {
    color: var(--color-accent_orange);
    transform: scale(1.1);
}

.player-content {
    padding: 16px;
}

.waveform {
    width: 100%;
    height: 40px;
    display: block;
    margin-bottom: 12px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
    border: 1px solid rgba(0, 204, 119, 0.15);
}

.time-display {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
    font-size: 0.75rem;
    color: var(--color-text_secondary);
    font-family: inherit;
    font-weight: 600;
}

.seek-bar {
    flex: 1;
    height: 6px;
    background: rgba(0, 204, 119, 0.1);
    border-radius: 4px;
    cursor: pointer;
    transition: height var(--transition);
    position: relative;
    border: 1px solid rgba(0, 204, 119, 0.15);
}

.seek-bar:hover {
    height: 8px;
}

.seek-bar::after {
    content: '';
    position: absolute;
    top: -2px;
    left: 0;
    height: 10px;
    background: var(--color-primary);
    border-radius: 9999px;
    box-shadow: 0 0 10px rgba(0, 204, 119, 0.4);
    transition: box-shadow var(--transition);
}

.preview-badge {
    background: rgba(183, 65, 14, 0.15);
    border: 1px solid rgba(183, 65, 14, 0.3);
    color: #e09040;
    padding: 8px 12px;
    border-radius: 4px;
    font-size: 0.7rem;
    text-align: center;
    margin-bottom: 12px;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    font-weight: 600;
}

.player-controls {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-bottom: 12px;
    flex-wrap: wrap;
}

.btn-control {
    background: rgba(0, 204, 119, 0.08);
    border: 1px solid rgba(0, 204, 119, 0.15);
    color: var(--color-primary);
    cursor: pointer;
    padding: 10px 16px;
    border-radius: 4px;
    font-size: 0.9rem;
    font-weight: 600;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 40px;
}

.btn-control:hover:not(:disabled) {
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent_orange));
    color: var(--color-background);
    border-color: var(--color-primary);
    box-shadow: 0 0 15px rgba(0, 204, 119, 0.2);
    transform: translateY(-2px);
}

.btn-control:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.volume-control {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 12px;
    background: rgba(0, 204, 119, 0.06);
    border-radius: 4px;
    border: 1px solid rgba(0, 204, 119, 0.15);
}

.volume-label {
    color: var(--color-text_secondary);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    min-width: 32px;
}

.volume-slider {
    flex: 1;
    height: 4px;
    -webkit-appearance: none;
    appearance: none;
    background: rgba(0, 204, 119, 0.15);
    border-radius: 9999px;
    outline: none;
    cursor: pointer;
}

.volume-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 14px;
    height: 14px;
    background: var(--color-primary);
    border-radius: 9999px;
    cursor: pointer;
    box-shadow: 0 0 8px rgba(0, 204, 119, 0.3);
    transition: var(--transition);
}

.volume-slider::-webkit-slider-thumb:hover {
    box-shadow: 0 0 12px rgba(0, 204, 119, 0.5);
    transform: scale(1.15);
}

.volume-slider::-moz-range-thumb {
    width: 14px;
    height: 14px;
    background: var(--color-primary);
    border-radius: 9999px;
    cursor: pointer;
    border: none;
    box-shadow: 0 0 8px rgba(0, 204, 119, 0.3);
    transition: var(--transition);
}

.volume-slider::-moz-range-thumb:hover {
    box-shadow: 0 0 12px rgba(0, 204, 119, 0.5);
    transform: scale(1.15);
}

.volume-slider::-moz-range-track {
    background: transparent;
    border: none;
}

.volume-slider::-moz-range-progress {
    background: var(--color-primary);
    height: 4px;
    border-radius: 9999px;
}

.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2000;
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.modal-content {
    background: var(--color-charcoal-700);
    border: 2px solid var(--color-primary);
    border-radius: 8px;
    padding: 32px;
    max-width: 420px;
    width: 100%;
    box-shadow: 0 0 30px rgba(0, 204, 119, 0.3);
    animation: slideUp 0.3s ease-out;
    backdrop-filter: blur(8px);
}

@keyframes slideUp {
    from {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.modal-content h2 {
    color: var(--color-primary);
    margin: 0 0 16px 0;
    font-size: 1.6rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.modal-content p {
    color: var(--color-text_secondary);
    margin: 12px 0;
    line-height: 1.6;
    font-size: 0.95rem;
}

.modal-buttons {
    display: flex;
    gap: 12px;
    margin-top: 24px;
}

.btn {
    flex: 1;
    padding: 12px 16px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.9rem;
    transition: var(--transition);
    letter-spacing: 0.5px;
}

.btn-danger {
    background: linear-gradient(135deg, #ff5459, #ff2222);
    color: white;
}

.btn-danger:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 15px rgba(255, 84, 89, 0.4);
}

.btn-secondary {
    background: rgba(0, 204, 119, 0.1);
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
}

.btn-secondary:hover {
    background: rgba(0, 204, 119, 0.2);
    transform: translateY(-2px);
}

.status-message {
    padding: 12px;
    border-radius: 4px;
    margin-bottom: 16px;
    display: none;
    border: 1px solid;
    position: relative;
    z-index: 2;
}

.status-message.success {
    background: rgba(0, 204, 119, 0.1);
    border-color: var(--color-primary);
    color: var(--color-primary);
    display: block;
}

.status-message.error {
    background: rgba(255, 84, 89, 0.1);
    border-color: #ff5459;
    color: #ff5459;
    display: block;
}

.status-message.loading {
    background: rgba(0, 204, 119, 0.1);
    border-color: var(--color-primary);
    color: var(--color-primary);
    display: block;
}

.tabs {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
    border-bottom: 1px solid rgba(0, 204, 119, 0.15);
    position: relative;
    z-index: 2;
}

.tab-btn {
    padding: 10px 16px;
    background: transparent;
    border: none;
    color: var(--color-text_secondary);
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: var(--transition);
    font-weight: 600;
    letter-spacing: 0.3px;
}

.tab-btn.active {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
    text-shadow: 0 0 8px rgba(0, 204, 119, 0.2);
}

.tab-content {
    display: none;
    position: relative;
    z-index: 2;
}

.tab-content.active {
    display: block;
}

.history-item {
    background: rgba(0, 204, 119, 0.06);
    border: 1px solid rgba(0, 204, 119, 0.12);
    padding: 12px;
    border-radius: 4px;
    margin-bottom: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: var(--transition);
}

.history-item:hover {
